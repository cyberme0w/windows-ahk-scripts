; Remap ijkl to arrow keys
; Alt+dir -> dir
!j::Send {left}
!k::Send {down}
!l::Send {right}
!i::Send {up}
; Alt+Shift+dir -> Shift+dir
!+j::Send +{left}
!+k::Send +{down}
!+l::Send +{right}
!+i::Send +{up}
; Alt+Ctrl+dir -> Ctrl+dir
!^j::Send ^{left}
!^k::Send ^{down}
!^l::Send ^{right}
!^i::Send ^{up}
; Alt+Shift+Ctrl+dir -> Shift+Ctrl+dir
!+^j::Send +^{left}
!+^k::Send +^{down}
!+^l::Send +^{right}
!+^i::Send +^{up}
; Alt+Win+dir -> Win+dir
!#j::Send #{left}
!#k::Send #{down}
!#l::Send #{right}
!#i::Send #{up}
; Alt+Win+Shift+dir -> Win+Shift+dir
!#+j::Send #+{left}
!#+k::Send #+{down}
!#+l::Send #+{right}
!#+i::Send #+{up}
; Alt+Win+Ctrl+dir -> Win+Ctrl+dir
!#^j::Send #^{left}
!#^k::Send #^{down}
!#^l::Send #^{right}
!#^i::Send #^{up}
